# Environment Configuration for CopilotApiProject

# Application Environment
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://+:8081;http://+:8080

# Database Configuration
CONNECTION_STRING=Server=localhost;Database=CopilotApiDB;Trusted_Connection=true;TrustServerCertificate=true;
USER_MANAGEMENT_DB_CONNECTION=Server=localhost;Database=UserManagement;Trusted_Connection=true;TrustServerCertificate=true;

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-here-at-least-32-characters-long
JWT_ISSUER=TechHive.Production.API
JWT_AUDIENCE=TechHive.Production.Client

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Settings
REQUIRE_HTTPS=true
ENABLE_SECURITY_HEADERS=true

# Monitoring & Logging
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
LOG_LEVEL=Information

# External Services (if needed)
# EMAIL_SERVICE_API_KEY=your-email-service-key
# SMS_SERVICE_API_KEY=your-sms-service-key

# Cache Settings
CACHE_SIZE_LIMIT=1000
CACHE_COMPACTION_PERCENTAGE=0.25

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx

# Deployment specific
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0